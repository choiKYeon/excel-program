{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs", // CommonJS 모듈을 사용합니다.
    "lib": [
      "dom",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true, // 빌드할 때 컴파일된 파일을 생성하지 않습니다.
    "jsx": "preserve",
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
